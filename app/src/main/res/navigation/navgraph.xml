<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navgraph"
    app:startDestination="@id/homeItem">
    <fragment
        android:id="@id/gameDetailsItem"
        android:name="com.example.spirala.GameDetailsFragment"
        android:label="GameDetailsFragment" >
        <argument
            android:name="title"
            app:argType="string" />
        <action
            android:id="@+id/toDetails"
            app:destination="@id/gameDetailsItem" />
        <action
            android:id="@+id/action_gameDetailsFragment_to_homeFragment"
            app:destination="@id/homeItem" />
    </fragment>
    <fragment
        android:id="@id/homeItem"
        android:name="com.example.spirala.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/toDetails"
            app:destination="@id/gameDetailsItem" />
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
        <action
            android:id="@+id/action_toHome"
            app:destination="@id/homeItem" />
    </fragment>
</navigation>